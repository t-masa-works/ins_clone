<% notice %></p>
<h3>投稿者：<%= @picture.user.name %>
<p>
  <strong>Image:</strong>
  <%= image_tag @picture.image.url %>
</p>

<p><%= @picture.content %></p>

<% unless @picture.user_id == current_user.id %>
  <% if @favorite.present? %>
    <%= link_to 'お気に入り解除する', favorite_path(id: @favorite.id), method: :delete, class: 'btn btn-danger' %>
  <% else %>
    <%= link_to 'お気に入りする', favorites_path(picture_id: @picture.id), method: :post, class: 'btn btn-primary' %>
  <% end %>
<% end %>

<% if @picture.user == current_user %>
  <button type="button" class="btn btn-info"><%= link_to '画像を編集する', edit_picture_path(@picture) %></button>
  <button type="button" class="btn btn-danger"><%= link_to '削除する', @picture, method: :delete, data: { confirm: "この画像を削除してもいいですか？" } %></button>
<% end %>

<%= link_to '一覧へ戻る', pictures_path, class:"btn btn-primary" %>